<h2 class="text-center">Sign up</h2>

<%= simple_form_for(resource, as: resource_name,html:{class:"form-signin"}, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>


    <%= f.input :email, label:false,required: true,placeholder:"Email", autofocus: true,input_html:{class:"form-control"} %>
    <div><%= f.input :password,label:false, required: true,placeholder:"Password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) ,input_html:{class:"form-control"}%></div>
    <%= f.input :password_confirmation,label:false, required: true,placeholder:"Confirm Password" ,input_html:{class:"form-control"}%>



    <%= f.button :submit, "Sign up" ,class:"btn btn-primary btn-block" %>
    <br>
      <%= render "devise/shared/links" %>

<% end %>



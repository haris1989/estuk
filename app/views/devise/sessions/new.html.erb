<h2 class="text-center">Sign in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name) , html:{class:"form-signin"}) do |f| %>
  
    <%= f.input :email,label:false, required: true, autofocus: true , placeholder:"Email",input_html: {class:"form-control" }%>
    <%= f.input :password,label:false, required: true,required:true,placeholder:"Password",input_html: {class:"form-control" }%>
    
  

  
    <%= f.button :submit, "Log in" ,class:"btn btn-primary btn-block" %>
	<br>
    <%= render "devise/shared/links" %>
  
<% end %>



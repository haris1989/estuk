
<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification%>

  <div class="form-signin">
    <%= f.input :name ,label:false,placeholder:"Name",input_html: {class:"form-control" } %>
    <br>
    <%= f.input :author,label:false ,placeholder:"Author",input_html: {class:"form-control" } %>
    <br>
    <%= f.input :description ,label:false ,placeholder:"Description",input_html: {class:"form-control" } %>
    <br>
    <%= f.input :price ,label:false ,placeholder:"Price",input_html: {class:"form-control" } %>
      <%= f.input :availability,input_html: {class:"form-control" }%>
      


    <br>
        <%= f.button :submit ,class:"btn btn-primary btn-block" %>
        <br>

        <%= link_to 'Back', books_path %>
  </div>


  
<% end %>
